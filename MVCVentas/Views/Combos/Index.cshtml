@model List<VMArticle>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .custom-card {
        width: 60%;
        margin: 10px auto;
    }

    .custom-column {
        width: 50%;
    }
</style>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Rubros</title>
</head>
<body>
    <div class="card shadow mb-4 custom-card">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Combos</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                Artículo del Combo
                            </th>
                            <th>
                                Descripción
                            </th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var articulo in Model)
                        {
                            <tr>
                                <td>
                                    @articulo.Id_Articulo
                                </td>
                                <td>
                                    @articulo.Nombre
                                </td>
                                <td>
                                    <a class='btn btn-primary btn-sm' asp-action="Details" asp-route-id="@articulo.Id_Articulo">Detalles</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
