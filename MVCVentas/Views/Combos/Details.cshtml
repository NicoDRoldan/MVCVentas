@model List<Tuple<int, string>>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .custom-card {
        width: 60%;
        margin: 10px auto;
    }

    .custom-column {
        width: 50%;
    }
</style>

<body>
    <div class="card shadow mb-4 custom-card">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Detalle del combo</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTableCombos" width="100%" cellspacing="0">

                    <thead>
                        <tr>
                            <th>
                                ID
                            </th>
                            <th class="custom-column">
                                Artículos del Combo
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Item1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Item2)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a asp-action="Index">Volver</a>
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts{
    <script>
        $(document).ready(function () {
            // Inicializar la tabla con DataTables
            $('#dataTableCombos').DataTable({
                "paging": false,          // Altura fija con barra de desplazamiento si es necesario
                "scrollCollapse": false,   // Colapsar la tabla si la altura es menor que el contenido
                "searching": false,        // Habilitar la función de búsqueda
                "ordering": false,         // Deshabilitar la ordenación
                "info": false,            // Deshabilitar la información de la tabla
            });
        });
    </script>
} 