@model MVCVentas.Models.VMComprobante_E

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalles del Comprobante</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Código de Comprobante
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodComprobante)
        </dd>
        <dt class = "col-sm-2">
            Descripción de Comprobante
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            Módulo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Modulo.CodModulo)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Edit", new { codComprobante = Model.CodComprobante, codModulo = Model.CodModulo }, new { @class = "btn btn-primary btn-sm" }) |
    <a asp-action="Index">Volver</a>
</div>
