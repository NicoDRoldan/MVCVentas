@model IEnumerable<MVCVentas.Models.VMSucursal>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Sucursal
            </th>
            <th>
                Tipo de Factura
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NumSucursal)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoFactura.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NumSucursal">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NumSucursal">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NumSucursal">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
