@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Venta</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-9">
                <!-- Contenedor para la lista de artículos -->
                <div class="row">
                    <div class="col-md-12">
                        <h2>Artículos</h2>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Precio</th>
                                    <th>Cantidad</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Aquí se mostrarán los artículos seleccionados -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <!-- Contenedor para el resumen de la venta -->
                <div class="row">
                    <div class="col-md-12">
                        <h2>Resumen de la Venta</h2>
                        <!-- Aquí se mostrará el subtotal, total, descuentos, etc. -->
                    </div>
                </div>
                <!-- Contenedor para las opciones adicionales de venta -->
                <div class="row">
                    <div class="col-md-12">
                        <h2>Opciones de Venta</h2>
                        <!-- Aquí se mostrarán las opciones como cliente, tipo de factura, etc. -->
                    </div>
                </div>
            </div>
        </div>
        <!-- Contenedor para la lista de categorías y artículos -->
        <div class="row">
            <div class="col-md-12">
                <h2>Categorías</h2>
                <!-- Aquí se mostrarán las categorías y sus respectivos artículos -->
            </div>
        </div>
    </div>

    <!-- Bootstrap JS (opcional, para algunas funcionalidades de Bootstrap) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Tu script JavaScript personalizado (si es necesario) -->

</body>
</html>
