@model IEnumerable<MVCVentas.Models.VMRubro>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .custom-card {
        width: 60%; 
        margin: 10px auto; 
    }
    .custom-column {
        width: 50%;
    }
</style>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Rubros</title>
</head>
<body>
    <div class="card shadow mb-4 custom-card">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Rubros</h6>
            @if (User.IsInRole("Admin") || User.IsInRole("Supervisor"))
            {
                <a class='btn btn-primary btn-sm' asp-action="Create">Nuevo Rubro</a>
            }
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Nombre)
                            </th>
                            <th class="custom-column">
                                Acción
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </td>
                                <td class="text-center">
                                    @if (User.IsInRole("Admin") || User.IsInRole("Supervisor"))
                                    {
                                        <a class='btn btn-primary btn-sm' asp-action="Edit" asp-route-id="@item.Id_Rubro">Editar</a>
                                        <label>|</label>
                                    }

                                    <a class='btn btn-primary btn-sm' asp-action="Details" asp-route-id="@item.Id_Rubro">Detalles</a>

                                    @if (User.IsInRole("Admin") || User.IsInRole("Supervisor"))
                                    {
                                        <label>|</label>
                                        <a class='btn btn-danger btn-sm' asp-action="Delete" asp-route-id="@item.Id_Rubro">Eliminar</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
