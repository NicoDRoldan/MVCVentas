@model MVCVentas.Models.VMCategory

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalles de Categoría</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Categoría
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id_Categoria">Editar</a> |
    <a asp-action="Index">Volver</a>
</div>
