            for (let i = 0; i < array.length; i++) {
                while (array[0].Text.startsWith('--->')) {

                    const elementoAMover = array.splice(i, 1)[0];

                    let j = array.length - 1;
                    while (j >= 0 && array[j].Text.startsWith('--->')) {
                        j--;
                    }

                    array.splice(j + 1, 0, elementoAMover);

                    break;
                }
            }
