            var total = 0;

            $('.input-text-formasPago').each(function (){
                total += parseFloat($(this).val()) || 0;
            });

            // Actualizar el campo "total-formaPago" con el total calculado
            $('#total-formaPago').val(total);

            // Calcular el resto
            var totalVenta = parseFloat($('#total').val());
            var resto = totalVenta - total;
