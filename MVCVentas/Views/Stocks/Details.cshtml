@model MVCVentas.Models.VMStock

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalles del Stock</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cantidad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cantidad)
        </dd>
        <dt class = "col-sm-2">
            ID del artículo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Articulo.Id_Articulo)
        </dd>
        <dt class="col-sm-2">
            Nombre del artículo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Articulo.Nombre)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin") || User.IsInRole("Supervisor"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id_Articulo">Editar</a> <a>|</a>
    }
    <a asp-action="Index">Volver</a>
</div>
